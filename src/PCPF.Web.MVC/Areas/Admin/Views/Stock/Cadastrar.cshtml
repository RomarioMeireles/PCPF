@model PCPF.Domain.Model.Stock
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-green">
    <div class="card-header">
        <h2 style="text-align:center">CADASTRAR STOCK</h2>
    </div>

    <div class="col-xs-12 col-sm-8 custom_right">
        <div class="single_content_left">
            <form method="post" class="apply_from" enctype="multipart/form-data">

                @Html.AntiForgeryToken()
                <br />
                @Html.ValidationSummary(false, "", new { @class = "alert-danger" })
                <br />

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Produto </div>
                        @Html.DropDownList("ProdutoId", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div><!--end form group-->

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Nº Lote</div>
                        <input type="text" class="form-control" name="NumeroLote">
                    </div>
                </div><!--end form group-->

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Quantidade</div>
                        <input type="text" class="form-control" name="Quantidade">
                    </div>
                </div><!--end form group-->

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Data Validade</div>
                        <input type="date" class="form-control" name="DataValidade">
                    </div>
                </div><!--end form group-->

               
                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="text-field">
                            @Html.DropDownList("UtilizadorId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div><!--end form group-->


                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <div class="text-field">
                                <input type="submit" value="Cadastrar" class="btn btn-outline-dark" />
                                <a href="/Admin/Produto/Lista" class="btn btn-danger" style="color:white">Voltar</a>

                            </div>
                        </div>
                    </div>
                </div><!--end form group-->



            </form>
        </div>
    </div>

</div><!--end row-->
