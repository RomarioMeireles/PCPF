@model PCPF.Domain.Model.Fornecedor

@{
    ViewBag.Title = "Actualizar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-green">
    <div class="card-header">
        <h2 style="text-align:center">ACTUALIZAR DADOS DO FORNECEDOR</h2>
    </div>
    <div class="col-xs-12 col-sm-8 custom_right">
        <div class="single_content_left">
            <form method="post" class="apply_from" enctype="multipart/form-data">

                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <div class="label">Nome</div>
                        </div>
                        <div class="col-xs-12 col-sm-8">
                            <div class="text-field">
                                @Html.EditorFor(model => model.DenominacaoFiscal, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div><!--end form group-->

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <div class="label">Email</div>
                        </div>
                        <div class="col-xs-12 col-sm-8">
                            <div class="text-field">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div><!--end form group-->


                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <div class="label">Telefone</div>
                        </div>
                        <div class="col-xs-12 col-sm-8">
                            <div class="text-field">
                                @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div><!--end form group-->


                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <div class="label">Documento</div>
                        </div>
                        <div class="col-xs-12 col-sm-8">
                            <div class="text-field">
                                @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div><!--end form group-->

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <div class="label">Activo?
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Status)
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                        </div></div>

                @*<div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="text-field">
                            @Html.DropDownList("UtilizadorId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>*@


                <div class="form-group">
                    <div class="row">

                        <div class="col-xs-12 col-sm-8">
                            <div class="text-field">
                                <input type="submit" value="Actualizar" class="btn btn-outline-dark" />

                                <a href="/Admin/Fornecedor/Lista" class="btn btn-danger" style="color:white">Voltar</a>
                            </div>
                        </div>
                    </div>
                </div><!--end form group-->

            </form>
        </div>
    </div>

</div><!--end row-->
