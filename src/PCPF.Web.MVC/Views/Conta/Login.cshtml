@using PCPF.Web.MVC.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="container admission-border" style="width:60%; padding-left:15%">
    <br />
    <h2>Entrar</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                <form method="post" class="apply_from" enctype="multipart/form-data">
                    
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, "Email", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10" style="width:80%">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, "Senha", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10" style="width:80%">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
