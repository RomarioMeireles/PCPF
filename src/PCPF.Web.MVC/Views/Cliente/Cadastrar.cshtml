                        <div class="row">
                            <div class="col-xs-12 col-sm-4">
                                <div class="label">Colegio <span class="error">*</span></div>
                            </div>
                            <div class="col-xs-12 col-sm-8">
                                <div class="text-field">-->
                        @*@Html.DropDownList("ColegioId", null, htmlAttributes: new { @class = "form-control" })*@
                        <!--</div>
                                </div>
                            </div>
                        </div>-->
                        <!--end form group-->


                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">  <span class="error"></span></div>
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="text-field">
                                        <input type="submit" value="Cadastrar" class="commonBtn">
                                    </div>
                                </div>
                            </div>
                        </div><!--end form group-->


                    </form>
                </div>
            </div>

        </div><!--end row-->
    </div>
</div><!--end custom content-->
