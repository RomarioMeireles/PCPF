@model PCPF.Web.MVC.Models.ProdutoViewModel
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-gray">
    <div class="card-header">
        <h3 class="card-title">Cadastrar Produto</h3>
    </div>

    <div class="col-xs-12 col-sm-8 custom_right">
        <div class="single_content_left">
            <form method="post" class="apply_from" enctype="multipart/form-data">

                <br />
                @await Component.InvokeAsync("Summary")

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Imagem </div>
                        <input class="form-control" name="ImagemNome" id="ImagemNome" readonly>
                        <span class="input-group-btn">
                            <label class="btn btn-primary" for="ImagemUpload">
                                <input class="form-control" asp-for="Imagem" type="file" 
                                       onchange="$('#ImagemNome').val(this.files[0].name); $('#Imagem').blur();">
                                <span class="glyphicon glyphicon-cloud-upload"></span>
                            </label>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Descrição </div>
                        <input class="form-control" asp-for="Descricao">
                    </div>
                </div>
                <!--end form group-->

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Código de barra</div>
                        <input class="form-control" asp-for="CodigoBarras">
                    </div>
                </div><!--end form group-->

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Qtd mínima</div>
                        <input class="form-control" asp-for="QuantidadeMinima">
                    </div>
                </div><!--end form group-->

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Valor</div>
                        <input class="form-control" asp-for="Valor">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Quantidade em Stock</div>
                        <input class="form-control" asp-for="Quantidade">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Nº Lote</div>
                        <input class="form-control" asp-for="NumeroLote">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Data de Validade</div>
                        <input class="form-control" type="date" asp-for="DataValidade">
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <div class="label">Observação </div>
                        </div>
                        <div class="col-xs-12 col-sm-8">
                            <div class="text-field">
                                @*<textarea class="form-control" rows="10" cols="10" name="Observacao">@Model==null?"":Model.Observacao</textarea>*@
                                @*@Html.TextAreaFor(model => model.Observacao, 10, 10, "")*@
                                <textarea id="Observacao" name="Observacao" style="height:100px; width:700px" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div><!--end form group-->
                @*<div class="form-group">
            <div class="col-xs-12 col-sm-8">
                <div class="text-field">
                    @Html.DropDownList("UtilizadorId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>*@
                <!--end form group-->


                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <div class="text-field">
                                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                                <a href="javascript:window.history.back();" class="btn btn-danger" style="color:white">Voltar</a>

                            </div>
                        </div>
                    </div>
                </div><!--end form group-->



            </form>
        </div>
    </div>

</div><!--end row-->
