@model PCPF.Domain.Model.Cliente
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="custom_content custom">
    <div class="container">
        <div class="row">

            <div class="col-xs-12 col-sm-8 custom_right">
                <div class="single_content_left">
                    <form method="post" class="apply_from" enctype="multipart/form-data">

                        @Html.AntiForgeryToken()
                        <h4>FORMULÁRIO PARA CADASTRO DE CLIENTE</h4>
                        @Html.ValidationSummary(false, "", new { @class = "alert-danger" })

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">Nome <span class="error">*</span></div>
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="text-field">
                                        <input type="text" class="form-control" name="Nome">
                                    </div>
                                </div>
                            </div>
                        </div><!--end form group-->

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">E-mail <span class="error">*</span></div>
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="text-field">
                                        <input type="text" class="form-control" name="Email">
                                    </div>
                                </div>
                            </div>
                        </div><!--end form group-->

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">Telefone <span class="error">*</span></div>
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="text-field">
                                        <input type="text" class="form-control" name="Telefone">
                                    </div>
                                </div>
                            </div>
                        </div><!--end form group-->

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">Doc <span class="error">*</span></div>
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="text-field">
                                        <input type="text" class="form-control" name="DocumentoIdentificacao">
                                    </div>
                                </div>
                            </div>
                        </div><!--end form group-->
