@model PCPF.Domain.Model.Fornecedor
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-gray">
    <div class="card-header">
        <h3 class="card-title">Cadastrar de fornecedor</h3>
    </div>

    <div class="col-xs-12 col-sm-8 custom_right">
        <div class="single_content_left">
            <form method="post" class="apply_from">
                <br />
                @await Component.InvokeAsync("Summary")

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Denominação fiscal </div>
                        <input type="text" class="form-control" name="Denominacaofiscal">
                    </div>
                </div><!--end form group-->

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">E-mail</div>
                        <input type="text" class="form-control" name="Email">
                    </div>
                </div><!--end form group-->

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Telefone</div>
                        <input type="text" class="form-control" name="Telefone">
                    </div>
                </div><!--end form group-->

                <div class="form-group">
                    <div class="col-xs-12 col-sm-8">
                        <div class="label">Endereço</div>
                        <textarea name="Endereco" style="width:700px; height:150px" class="form-control"></textarea>
                    </div>
                </div><!--end form group-->
                <!--end form group-->


                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <div class="text-field">
                                <input type="submit" value="Cadastrar" class="btn btn-success" />
                                <a href="javascript:window.history.back();" class="btn btn-danger" style="color:white">Voltar</a>
                            </div>
                        </div>
                    </div>
                </div><!--end form group-->
            </form>
        </div>
    </div>

</div><!--end row-->
