@model PCPF.Domain.Model.Cliente

@{
    ViewBag.Title = "Actualizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="custom_content custom">
    <div class="container" style="background-color:white; width:100%">
        <div class="row">
            <div class="col-xs-12 col-sm-8 custom_right">
                <div class="single_content_left">
                    <form method="post" class="apply_from" enctype="multipart/form-data">

                        @Html.AntiForgeryToken()
                        <h4 style="text-align:center" >ACTUALIZAR DADOS DO CLIENTE</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group" style="padding-left:20px">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">Nome <span class="error">*</span></div>
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="text-field">
                                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                        </div><!--end form group-->

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">Email <span class="error">*</span></div>
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="text-field">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                        </div><!--end form group-->


                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">Telefone <span class="error">*</span></div>
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="text-field">
                                        @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                        </div><!--end form group-->


                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">Documento  <span class="error">*</span></div>
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="text-field">
                                        @Html.EditorFor(model => model.DocumentoIdentificacao, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                        </div><!--end form group-->

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">Activo? <span class="error"></span></div>
                                </div>
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.Status)
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="label">  <span class="error"></span></div>
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="text-field">
                                        <input type="submit" value="Actualizar" class="commonBtn">
                                    </div>
                                </div>
                            </div>
                        </div><!--end form group-->

                    </form>

                    <div>
                        @Html.ActionLink("Voltar", "Lista")
                    </div>
                </div>
            </div>

        </div><!--end row-->
    </div>
</div><!--end custom content-->